{
  "compilerOptions": {
    "allowJs": true,
    // "target": "esnext",
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      // "esnext",
      // "dom",
      // "dom.iterable",
      // "scripthost",
      "ES5",
      "ES6",
      "ES2015",
      "ES7",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "ScriptHost",
      "ES2015.Core",
      "ES2015.Collection",
      "ES2015.Generator",
      "ES2015.Iterable",
      "ES2015.Promise",
      "ES2015.Proxy",
      "ES2015.Reflect",
      "ES2015.Symbol",
      "ES2015.Symbol.WellKnown",
      "ES2016.Array.Include",
      "ES2017.object",
      "ES2017.Intl",
      "ES2017.SharedMemory",
      "ES2017.String",
      "ES2017.TypedArrays",
      "ES2018.Intl",
      "ES2018.Promise",
      "ES2018.RegExp",
      "ESNext.AsyncIterable",
      "ESNext.Array",
      "ESNext.Intl",
      "ESNext.Symbol"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
